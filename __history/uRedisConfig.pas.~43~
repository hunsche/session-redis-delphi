unit uRedisConfig;

interface

type

  TRedisConfig = class
  private
    FPort: Integer;
    FHost: string;
  public
    property Host: string read FHost write FHost;
    property Port: Integer read FPort write FPort;
    constructor Create;
  end;

implementation

uses
  inifiles, System.SysUtils, Vcl.Forms;

{ TRedisConfig }

constructor TRedisConfig.Create;
var
  Ini: TIniFile;
begin
  Ini := TIniFile.Create( ChangeFileExt(Application.ExeName, '.INI' ));
  try
    FHost := Ini.ReadString('Redis', 'Host', '127.0.0.1');
    FPort := Ini.ReadInteger('Redis', 'Port', 6379);
  finally
    Ini.Free;
  end;
end;

end.
